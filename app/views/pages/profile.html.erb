<div class="container py-5 my-5">
  <div class="card">
    <div class="card-header">
      <h1>Profile</h1>
    </div>
    <div class="card-body">
      <p><strong>First name:</strong> <%= current_user.first_name %></p>
      <p><strong>Last name:</strong> <%= current_user.last_name %></p>
      <p><strong>Email:</strong> <%= current_user.email %></p>
      <%= link_to "Edit account", edit_user_registration_path, class: "btn btn-primary mt-3" %>
    </div>
  </div>

  <div class="card mt-5">
    <div class="card-header">
      <h2>Items</h2>
    </div>
    <div class="card-body">
      <%= link_to "Add item", new_item_path, class: "btn btn-primary mb-3" %>
      <div class="row g-3">
        <% @items.each do |item| %>
          <div class="col-lg-4">
            <div class="card">
              <% if item.photo.attached? %>
                <%= cl_image_tag item.photo.key, class: "card-img-top", crop: :fill %>
              <% else %>
                <%= image_tag 'placeholder.jpg', class: "card-img-top" %>
              <% end %>
              <div class="card-body">
                <p><strong>Brand:</strong> <%= item.brand %></p>
                <p><strong>Description:</strong> <%= item.description %></p>
                <div class="button-group">
                  <%= link_to "Edit", edit_item_path(item), class: "btn btn-primary btn-sm" %>
                  <%= link_to "Delete", item_path(item), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this?" }, class: "btn btn-danger btn-sm" %>
                  <%= link_to "View", item_path(item), class: "btn btn-secondary btn-sm" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
