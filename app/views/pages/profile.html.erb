<div class="profile-container">
  <div class="profile-header">
    <h1>Profile</h1>
    <div class="profile-info">
      <p><strong>First name:</strong> <%= current_user.first_name %></p>
      <p><strong>Last name:</strong> <%= current_user.last_name %></p>
      <p><strong>Email:</strong> <%= current_user.email %></p>
      <%= link_to "Edit account", edit_user_registration_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="items-section">
    <h2>Items</h2>
    <hr>
    <%= link_to "Add item", new_item_path, class: "btn btn-primary mb-3" %>
    <div class="item-grid">
      <% @items.each do |item| %>
        <div class="item-card">
          <%= cl_image_tag item.photo.key, class: "item-image", crop: :fill %>
          <div class="item-details">
            <p><strong>Brand:</strong> <%= item.brand %></p>
            <p><strong>Description:</strong> <%= item.description %></p>
            <div class="item-actions">
              <%= link_to "Edit", edit_item_path(item), class: "btn btn-sm btn-primary" %>
              <%= link_to "Delete", item_path(item), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this?" }, class: "btn btn-sm btn-danger" %>
              <%= link_to "View", item_path(item), class: "btn btn-sm btn-info" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="bookings-section">
    <h2>Bookings</h2>
    <%= link_to "View Bookings", bookings_path, class: "btn btn-primary" %>
  </div>
</div>