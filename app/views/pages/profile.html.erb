<div class="container py-5 my-5">
  <div class="card">
    <div class="card-header">
      <h1>Profile</h1>
    </div>
    <div class="card-body">
      <p><strong>First name:</strong> <%= current_user.first_name %></p>
      <p><strong>Last name:</strong> <%= current_user.last_name %></p>
      <p><strong>Email:</strong> <%= current_user.email %></p>
      <%= link_to "Edit account", edit_user_registration_path, class: "button" %>
    </div>
  </div>
  <hr>
 <a class="button" data-bs-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">Rent requests</a>
  <a class="button" data-bs-toggle="collapse" data-bs-target="#multiCollapseExample2" aria-expanded="false" aria-controls="multiCollapseExample2">Lend requests</a>
</p>
<div class="row">
  <div class="col">
    <div class="collapse multi-collapse" id="multiCollapseExample1">
      <div class="card card-body">
        <% if @rentpending.count > 0%>
<h3>Pending requests</h3>
<hr>
<% end  %>
    <% @rentpending.each do |rentpending| %>
      <div class="bg-warning bg-opacity-25 mb-2 booking-card">

        <h5><%= rentpending.item.brand %></h5>
        <p>Booking Date: <%= rentpending.created_at.strftime('%B %d, %Y') %></p>
        <%= link_to 'View Details', booking_path(rentpending), class: 'button' %>
        </div>
    <% end %>
    <% if @rentaccepted.count > 0%>
<h3>Accepted requests</h3>
<hr>
<% end  %>
    <% @rentaccepted.each do |rentaccepted| %>
      <div class="bg-success bg-opacity-25 mb-2 booking-card">

        <h5><%= rentaccepted.item.brand %></h5>
        <p>Booking Date: <%= rentaccepted.created_at.strftime('%B %d, %Y') %></p>
        <%= link_to 'View Details', booking_path(rentaccepted), class: 'button' %>
        </div>
    <% end %>
<% if @rentrejected.count > 0%>
<h3>Rejected requests</h3>
<hr>
<% end  %>
    <% @rentrejected.each do |rentrejected| %>
      <div class="bg-danger bg-opacity-25 mb-2 booking-card">

        <h5><%= rentrejected.item.brand %></h5>
        <p>Booking Date: <%= rentrejected.created_at.strftime('%B %d, %Y') %></p>
        <%= link_to 'View Details', booking_path(rentrejected), class: 'button' %>
        </div>
    <% end %>
  </div>
<div class="col-6">
      </div>
    </div>
  </div>
  <div class="col">
    <div class="collapse multi-collapse" id="multiCollapseExample2">
      <div class="card card-body">
<% if @lendpending.count > 0%>
<h3>Pending requests</h3>
<hr>
<% end  %>
    <% @lendpending.each do |lendpending| %>
      <div class="bg-warning bg-opacity-25 mb-2 booking-card">

        <h5><%= lendpending.item.brand %></h5>
        <p>Booking Date: <%= lendpending.created_at.strftime('%B %d, %Y') %></p>
        <%= link_to 'View Details', booking_path(lendpending), class: 'button' %>
        </div>
    <% end %>
    <% if @lendaccepted.count > 0%>
<h3>Accepted requests</h3>
<hr>
<% end  %>
    <% @lendaccepted.each do |lendaccepted| %>
      <div class="bg-success bg-opacity-25 mb-2 booking-card">

        <h5><%= lendaccepted.item.brand %></h5>
        <p>Booking Date: <%= lendaccepted.created_at.strftime('%B %d, %Y') %></p>
        <%= link_to 'View Details', booking_path(lendaccepted), class: 'button' %>
        </div>
    <% end %>
    <% if @lendrejected.count > 0%>
<h3>Rejected requests</h3>
<hr>
<% end  %>
    <% @lendrejected.each do |lendrejected| %>
      <div class="bg-danger bg-opacity-25 mb-2 booking-card">

        <h5><%= lendrejected.item.brand %></h5>
        <p>Booking Date: <%= lendrejected.created_at.strftime('%B %d, %Y') %></p>
        <%= link_to 'View Details', booking_path(lendrejected), class: 'button' %>
        </div>
    <% end %>
  </div>      </div>
    </div>
  </div>
</div>
  <div class="card mt-5">
    <div class="card-header">
      <h2>Items</h2>
    </div>
    <div class="card-body">
      <%= link_to "Add item", new_item_path, class: "button" %>
      <hr>
      <div class="row g-3">
        <% @items.each do |item| %>
          <div class="col-lg-4">
            <div class="card">
              <div class="card-body">
                <p><strong>Brand:</strong> <%= item.brand %></p>
                <p><strong>Description:</strong> <%= item.description %></p>
                <div class="button-group">
                  <%= link_to "Edit", edit_item_path(item), class: "button" %>
                  <%= link_to "Delete", item_path(item), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this?" }, class: "button" %>
                  <%= link_to "View", item_path(item), class: "button" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
