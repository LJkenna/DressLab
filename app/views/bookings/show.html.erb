<div class="container py-5 my-5">
  <div class="card">
    <div class="card-header">
      <h1>Booking</h1>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <p><strong>Rent start date:</strong> <%= @booking.rent_start_date %></p>
          <p><strong>Rent end date:</strong> <%= @booking.rent_end_date %></p>
          <p><strong>Total amount: </strong><%= @booking.total_amount %>â‚¬</p>
          <p><strong>Status:</strong> <%= @booking.status.capitalize.tr("_"," ") %></p>
        </div>
        <div class="col-md-6">
          <h2>Item</h2>
          <div class="card mb-3">
            <div class="card-img-container">
              <%= cl_image_tag @item.photo.key, class: "card-img-top", crop: :fill %>
            </div>
            <div class="card-body">
              <p><strong>Brand:</strong> <%= @item.brand %></p>
              <p><strong>Description:</strong> <%= @item.description %></p>
            </div>
          </div>
        </div>
      </div>
      <div class="mt-4">
        <%= link_to "Back to shop", items_path, class: "button  " %>
        <%= link_to "Delete request", booking_path(@booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure want to delete this?"}, class: "button"  %>
<hr>
            <%= link_to "Back to profile", profile_path, class: "button" %>
          <hr><% if @item.user_id == current_user.id  %>
          <% if @booking.request_pending? %>
          <%= link_to "Accept request", accept_path(@booking), class: "button"  %>
          <%= link_to "Reject request", reject_path(@booking), class: "button"  %>
          <% end %>
          <% end  %>
      </div>
    </div>
  </div>
</div>
