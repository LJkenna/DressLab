<section class="items-index">
  <div class="banner">
    <div class="container">
      <h2>View all styles</h2>
    </div>
  </div>
  <div class="container">
    <h2 class="text-center mb-4">Shop</h2>
    <div class="row">
      <% @items.each do |item| %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <%= link_to item_path(item), class: "text-decoration-none" do %>
              <div class="card-img-container">
                <%= cl_image_tag item.photo.key, class: "card-img-top", crop: :fill, width: 400, height: 500 %>
              </div>
              <div class="card-body">
                <h5 class="card-title"><%= item.brand %></h5>
                <p class="card-text"><%= item.description %></p>
                <p class="card-text"><strong><%= item.price_per_day %>â‚¬</strong> Per day</p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>