<section class="items-index">
  <div class="container">
    <h2>Shop</h2>
    <div class="row">
      <% @items.each do |item| %>
        <div class="col-md-4">
          <div class="item-card">
            <%= link_to item_path(item), class: "card" do %>
              <%= cl_image_tag item.photo.key, class: "card-img-top" %>
              <h3 class="card-title"><%= item.brand %></h3>
              <div class="card-body"><%= item.description %></div>
              <p class="card-text"><%= item.price_per_day %>â‚¬ Per day</p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
