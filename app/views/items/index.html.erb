<div class="container py-5 my-5">
  <div class="card">
    <div class="card-header">
      <h2>Shop</h2>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <% @items.each do |item| %>
          <div class="col-lg-4">
            <div class="card">
              <%= link_to item_path(item), class: "text-decoration-none" do %>
                <div class="card-img-container">
                  <% if item.photo.attached? %>
                    <%= cl_image_tag item.photo.key, class: "card-img-top", crop: :fill, width: 400, height: 500 %>
                  <% else %>
                    <%= image_tag 'placeholder.jpg', class: "card-img-top" %>
                  <% end %>
                </div>
                <div class="card-body">
                  <h5 class="card-title"><%= item.brand %></h5>
                  <p class="card-text"><%= item.description %></p>
                  <p class="card-text"><strong><%= item.price_per_day %>â‚¬</strong> Per day</p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>